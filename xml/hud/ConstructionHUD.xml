<?xml version="1.0" encoding="utf-8" standalone="no"?>
<HUD>
    <HudElement type="empty" id="layout" profile="constructionHud_layout">

        <!-- Header -->

        <HudElement type="constructionHudHeader" id="header" profile="constructionHud_header">
            <HudElement type="bitmap" profile="constructionHud_stripesBar" />
            <HudElement type="bitmap" profile="constructionHud_headerIcon" />

            <HudElement type="text" name="title" profile="constructionHud_headerTitle" />
            <HudElement type="text" name="text" profile="constructionHud_headerText" />

            <HudElement type="constructionProgressBar" name="progressBar" profile="constructionHud_headerProgressBar">
                <HudElement type="bitmap" profile="theme_progressBarElement" />
                <HudElement type="bitmap" profile="theme_progressBarElement" />
            </HudElement>
        </HudElement>

        <!-- Inputs -->

        <HudElement
            type="constructionHudInputList"
            profile="constructionHud_inputList"
            id="inputList"
        >
            <HudElement type="constructionHudInputListItem" profile="constructionHud_inputListItem">
                <HudElement type="bitmap" profile="constructionHud_inputListItemIcon" name="icon" />
                <HudElement type="text" profile="constructionHud_inputListItemTitle" name="title" />
                <HudElement type="text" profile="constructionHud_inputListItemText" name="text" />

                <HudElement type="constructionProgressBar" name="progressBar" profile="constructionHud_inputListItemProgressBar">
                    <HudElement type="bitmap" profile="theme_progressBarElement" />
                    <HudElement type="bitmap" profile="theme_progressBarElement" />
                </HudElement>
            </HudElement>
        </HudElement>
    </HudElement>
</HUD>